<div class="container">
  <div class="row">
    <div class="col-lg-3">
<%= render 'books/list', book: @books, user:@users %>
</div>
<div class="col-lg-9">
<% if flash[:notice] %>
 <%= flash[:notice] %>
 <% end %>
<h1>詳細</h1>
<table class="table table-striped">
  <thead>
  	<tr>
  	  <th>Image</th>
  	  <th>Title</th>
  	  <th>Body</th>
  	</tr>
  </thead>
  <tbody>
    <tr>
      <td><%= link_to user_path(@book.user.id), class: "user_path(@book.user.id)" do %>
        <%= attachment_image_tag @book.user, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg" %>
          <% end %>
          <%=link_to @book.user.name, user_path(@book.user.id) %>
        </td>
      <td><%= @book.title %></td>
      <td><%= @book.body %></td>

<% if @book.user == current_user %>
      <td><%= link_to "Edit", edit_book_path(@book.id), class: "edit_book_#{@book.id}" %></td>
      <td><%= link_to "Destroy", book_path(@book.id), method: :delete, "data-confirm" => "Are you sure？",  class: "destroy_book_#{@book.id}" %></td>
<% end %>
</tr>
</tbody>
</table>
</div>
</div>
</div>
