<div class="container">
  <div class="row">
    <div class="col-lg-3">
    <%= render 'books/list', book: @book, user: @users %>
    </div>
    <div class="col-lg-9">
<h1>Books</h1>
<table class="table table-striped">
<thead>
  <tr>
    <th>User image</th>
    <th>Title</th>
    <th>Body</th>
  </tr>
</thead>
<tbody>
  <% @books.each do |book| %>
    <tr>
      <td><%= link_to user_path(book.user.id), class: "user_path(book.user.id)" do %>
        <%= attachment_image_tag book.user, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg", class: "user_path(book.user.id)" %>
        <% end %>
        <%=link_to book.user.name, user_path(book.user.id) %>
      </td>
      <td><%= link_to book.title, book_path(book.id), class: "book_#{book.id}" %></td>
      <td><%= book.body %></td>
    </tr>
  <% end %>
</tbody>
</table>
</div>
</div>
</div>
