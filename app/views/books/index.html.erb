<div class="container">
  <div class="row">
    <div class="col-lg-3">
    <%= render 'books/list', book: @book, user: @users %>
    </div>
    <div class="col-lg-9">
<h1>Books</h1>
<table class="table table-striped">
<thead>
  <tr>
    <th>Image</th>
    <th>Title</th>
    <th>Body</th>
  </tr>
</thead>
<tbody>
  <% @books.each do |book| %>
    <tr>
      <td><%= attachment_image_tag @user, :profile_image, :fill, 40, 40, format: 'jpeg', fallback: "no_image.jpg" %></td>
      <td><%= link_to book.title, book_path(book.id), class: "book_#{book.id}" %></td>
      <td><%= book.body %></td>
    </tr>
  <% end %>
</tbody>
</table>
</div>
</div>
</div>
