<div class="container">
<div class="row">
<div class="col-lg-3">
<%= render 'books/list', book: @book, user: @user %>
</div>
<div class="col-lg-9">
<% if flash[:notice] %>
 <%= flash[:notice] %>
 <% end %>
<h1>User books</h1>
<table class="table table-striped">
<thead>
  <tr>
    <th>User image</th>
    <th>Title</th>
    <th>Body</th>
  </tr>
</thead>
<tbody>
  <% @books.each do |book| %>
    <tr>
      <td><%= attachment_image_tag @user, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg" %></td>
      <td><%= link_to book.title, book_path(book.id), class: "book_#{book.id}" %></td>
      <td><%= book.body %></td>
    </tr>
  <% end %>
</tbody>
</table>
</div>
</div>
</div>
